                        </CButton>
                        <CDataTable :responsive="true" :items="items" :fields="fields" hover>
                            <template #order="{ index }">
                                <td>{{ index + 1 }}</td>
                            </template>
                            <template #action>
                                <td>
                                    <CButton @click="add_rpl_state = true" :color="'info'">
                                        Buat RPL
                                        <CIcon color="white" name="cil-arrow-right" />
                                    </CButton>
                                </td>
                            </template>
                        </CDataTable>
                    </CCardBody>
                </CCard>
            </CCol>
            <CCol v-if="add_rpl_state" lg="7">
